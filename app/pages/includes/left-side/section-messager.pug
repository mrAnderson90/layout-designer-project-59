-
	const currentContact = {
		name: 'Вениамин Редакторович',
		status: 'Онлайн',
		avatar: '../app/images/avatar_4.jpg',
	};

	const messages = [
		{
			avatar: '../app/images/avatar_4.jpg',
			name: 'Вениамин Редакторович',
			text: 'Да, я уже вышел и минут через 20-30 буду у тебя. Поеду на трамвае и потом в магазин. Тебе что-то захватить?',
			timing: '8 минут назад',
		},
		{
			avatar: '',
			name: '',
			text: 'Захвати мне колы и пару печенек. Как-то очень сладкого хочется, а в магазин идти лень',
			timing: '5 минут назад',
		},
		{
			avatar: '../app/images/avatar_4.jpg',
			name: 'Вениамин Редакторович',
			text: 'Лады',
			timing: '5 минут назад',
		},
		{
			avatar: '',
			name: '',
			text: 'А, слушай, купи мне ещё Macbook Pro. А то хочется работать в Хекслете, а там это условие',
			timing: '3 минуты назад',
		},
		{
			avatar: '../app/images/avatar_4.jpg',
			name: 'Вениамин Редакторович',
			text: 'О_о',
			timing: 'Только что',
		},
	];

section.tab-pane.h-100(role='tabpanel' aria-labelledby='current-chat-tab' id='current-chat' tabindex='0')
	.sticky-top.border-bottom.bg-white
		a(href='#').contact
			img(src=currentContact.avatar alt='avatar').avatar.avatar-sm
			.contact-title
				.contact-name= currentContact.name
				.contact-status= currentContact.status
	.h-100.pt-5.px-5.hide-scrollbar
		each message in messages
			if message.name
				.row.mb-3
					.col
						.card.rounded-4.border-0.p-0
							.card-body.p-4.rounded-4.shadow-sm.bg-light.text-muted
								.card-title.text-dark.fw-bold.mb-1= message.name
								.card-text.mb-2= message.text
								.card-text.pt-1.border-top
									small= message.timing
			else
				.row.mb-3
					.col
						.card.rounded-4.border-0.p-0
							.card-body.p-4.rounded-4.shadow-sm.text-bg-primary
								.card-text.mb-2= message.text
								.card-text.pt-1.border-top
									small= message.timing
	.row.sticky-bottom.border-top.bg-white
		form(action='#')
			.input-group.flex-nowrap
				input.form-control-plaintext.ps-3(type='text' placeholder='Напишите сообщение...' aria-label='Напишите сообщение')
				.input-group-text.bg-white.border-0.p-3
					button.btn.btn-primary.rounded-circle.p-0.send
						img(src='../app/images/icons/cursor.svg', alt='send')